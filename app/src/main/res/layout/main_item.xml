<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollbtn"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="6dp"
    app:cardCornerRadius="6dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:padding="15dp"
        android:background="#FEEBC1">


        <ImageView
            android:id="@+id/imageView20"
            android:layout_width="130dp"
            android:layout_height="92dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="-20dp"
            app:srcCompat="@drawable/pizzaimg" />

        <TextView
            android:id="@+id/emailtext"
            android:layout_width="132dp"
            android:layout_height="83dp"
            android:layout_marginLeft="-10dp"
            android:layout_marginTop="32dp"
            android:layout_toRightOf="@+id/imageView20"
            android:fontFamily="@font/poppinsregular"
            android:text="Email"
            android:textColor="#FEEBC1"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/itemstext"
            android:layout_width="132dp"
            android:layout_height="83dp"
            android:layout_marginLeft="-10dp"
            android:layout_marginTop="32dp"
            android:layout_toRightOf="@+id/imageView20"
            android:fontFamily="@font/poppinsregular"
            android:text="Items"
            android:textColor="#0A191E"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ordertext"
            android:layout_width="101dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:fontFamily="@font/poppinsmedium"
            android:text="OrderID"
            android:textColor="#0A191E"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/deliverystatustext"
            android:layout_width="94dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="-2dp"
            android:layout_below="@+id/imageView20"
            android:fontFamily="@font/poppinsitalic"
            android:text="DeliveryStatus"
            android:textColor="#838383"
            android:textSize="11sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/totaltext"
            android:layout_width="94dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="255dp"
            android:layout_below="@+id/imageView20"
            android:fontFamily="@font/poppinsmediumitalic"
            android:text="TotalPrice"
            android:textColor="#0A191E"
            android:textSize="11sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/total"
            android:layout_width="94dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="255dp"
            android:layout_marginTop="100dp"
            android:fontFamily="@font/poppinsbold"
            android:text="Total"
            android:textColor="#0A191E"
            android:textSize="11sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/datetext"
            android:layout_width="99dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="240dp"
            android:fontFamily="@font/cerapromedium"
            android:text="Date"
            android:textColor="#0A191E"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ziptext"
            android:layout_width="93dp"
            android:layout_height="28dp"
            android:layout_marginLeft="70dp"
            android:fontFamily="@font/poppinsmedium"
            android:text="Zip"
            android:textColor="#FEEBC1"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnscroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"/>





    </RelativeLayout>

</androidx.cardview.widget.CardView>